<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#fcfefd"
    tools:context="com.example.hamshi.iems.Application_User_Type">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User"
        android:id="@+id/textView21"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="#010101" />

    <Button
        android:id="@+id/btn_patient"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="25dp"
        android:layout_weight="0.20"
        android:background="@drawable/user"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Carer"
        android:id="@+id/textView18"
        android:layout_gravity="center_horizontal"
        android:textColor="#020202"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_carrier"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="25dp"
        android:layout_weight="0.20"
        android:background="@drawable/caretaker2"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Doctor"
        android:id="@+id/textView20"
        android:layout_gravity="center_horizontal"
        android:textColor="#010101"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_doctor"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/doctorr"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_weight="0.20" />


</LinearLayout>
